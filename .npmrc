# Configuración específica para pnpm
# https://pnpm.io/npmrc

# Hoist all dependencies to reduce duplication
hoist-pattern[]=*

# Use exact versions to avoid unexpected updates
save-exact=true

# Enable auto-install-peers to handle peer dependencies
auto-install-peers=true

# Use faster algorithms
resolution-mode=highest

# Store configuration
store-dir=~/.pnpm-store

# Lockfile settings
lockfile=true
prefer-frozen-lockfile=true

# Progress configuration
progress=true

# Network settings
network-concurrency=16

# Logging
loglevel=warn